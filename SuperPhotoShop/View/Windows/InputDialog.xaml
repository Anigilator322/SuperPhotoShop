<Window x:Class="SuperPhotoShop.View.Windows.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuperPhotoShop.View.Windows"
        mc:Ignorable="d"
         Title="Ввод данных" Height="300" Width="400" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" WindowStyle="SingleBorderWindow">
    <StackPanel Margin="10">
        <TextBlock Text="Введите данные:" FontWeight="Bold" Margin="0,0,0,10"/>
        <StackPanel x:Name="InputFieldsPanel"/>
        <Button Content="Ок" Width="80" HorizontalAlignment="Right" Margin="0,10,0,0"
                Click="OkButton_Click"/>
    </StackPanel>
</Window>
